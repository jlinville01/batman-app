<h1 class="text-header">MOVIES</h1>

<div class="pic"><%= image_tag(@movie.poster, size: "500x700") %></div>

<table class="center-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Release Date</th>
      <th>Synopsis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @movie.title %></td>
      <td><%= @movie.release_date %></td>
      <td><%= @movie.synopsis %></td>
    </tr>
  </tbody>
</table>