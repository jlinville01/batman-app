<h1 class="text-header" data-qa="movies-page-header">MOVIES</h1>

<div class="pic"><%= image_tag("movies/movies.png", size: "900x500") %></div>

<table class="content-table">
  <thead>
    <tr>
      <th>Poster</th>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= image_tag(movie.poster, size: "150x200") %></td>
        <td><%= link_to movie.title, movie_path(Movie.find_by(id: movie.id)), class: "movie-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>