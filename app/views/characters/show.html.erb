<h1 class="text-header" data-qa="characters-page-header">CHARACTERS</h1>

<div class="pic"><%= image_tag(@character.avatar, size: "900x500") %></div>

<table class="content-table">
  <thead>
    <tr>
      <th>Alter Ego</th>
      <th>Real Name</th>
      <th>Debut</th>
      <th>Status</th>
      <th>Bio</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td data-qa="character-alter-ego"><%= @character.alter_ego %></td>
      <td data-qa="character-real-name"><%= @character.real_name %></td>
      <td data-qa="character-debut"><%= @character.debut %></td>
      <td data-qa="character-status"><%= @character.status %></td>
      <td data-qa="character-bio"><%= @character.bio %></td>
    </tr>
  </tbody>
</table>