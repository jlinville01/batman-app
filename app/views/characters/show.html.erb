<h1 class="text-header" data-qa="characters-page-header">CHARACTERS</h1>

<div class="pic"><%= image_tag(@character.avatar, size: "900x500") %></div>

<table class="content-table">
  <thead>
    <tr>
      <th>Alias</th>
      <th>Real Name</th>
      <th>Debut</th>
      <th>Status</th>
      <th>Bio</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @character.alias %></td>
      <td><%= @character.real_name %></td>
      <td><%= @character.debut %></td>
      <td><%= @character.status %></td>
      <td><%= @character.bio %></td>
    </tr>
  </tbody>
</table>