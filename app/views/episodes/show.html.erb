<h1 class="text-header">EPISODES</h1>

<div class="pic"><%= image_tag(@episode.title_card, size: "900x500") %></div>

<table class="content-table">
  <thead>
  <tr>
    <th>Episode</th>
    <th>Season</th>
    <th>Title</th>
    <th>Synopsis</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <td><%= @episode.number %></td>
    <td><%= @episode.season %></td>
    <td><%= @episode.title %></td>
    <td><%= @episode.synopsis %></td>
  </tr>
  </tbody>
</table>